{
  "name": "job-search-aggregator",
  "version": "1.0.0",
  "description": "A comprehensive job search tool that aggregates listings from LinkedIn, BuiltIn, remote job sites, and Google Jobs",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": ["job-search", "scraper", "linkedin", "builtin", "remote-jobs"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "date-fns": "^3.0.6",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "exceljs": "^4.4.0",
    "uuid": "^9.0.1",
    "node-json-db": "^2.3.0"
  },
  "optionalDependencies": {
    "puppeteer": "^21.6.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
